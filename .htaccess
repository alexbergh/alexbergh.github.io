# Prevent directory listing
 Options -Indexes

# Disable server signature
ServerSignature Off

# Remove trailing slashes
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} (.+)/$
    RewriteRule ^ %1 [R=301,L]
</IfModule>

